
---
import Layout from '../layouts/layouts.astro'
import Main from '../components/Main.astro'
import AppCards from '../components/ProjectCards.astro'
import repoData from '../data/repos.json'
import H1 from '../components/h1.astro'
export interface Props {
  url: string;
  name: string;
  description: string;
  projectType: string;
}
---

<Layout title="Projects" >
  
  <Main>

    <H1  text="Projects" ></H1>

    <ul class="app-card-list">
      {
        repoData.map((repoData) => {
          return (
            <AppCards
              name={repoData.name}
              url={repoData.url}
              description={repoData.description}
              projectType={repoData.projectType}
            />
          );
        })
      }
      </ul>

  </Main>
  
</Layout>